import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.SocketException;
import java.net.SocketTimeoutException;
import java.util.Arrays;



public class ChatServer {

	public static DatagramSocket serverSocket = null;
	public static boolean state = true, turnOff = false, turnOn = false;
	public static void main(String[] args) throws Exception {
		GUI frm = new GUI("Button Demo");

		frm.pack();    
		frm.setVisible( true ); 
		serverSocket = new DatagramSocket(9876);
		byte[] receiveData = new byte[1024];
		byte[] sendData = new byte[1024];
		while(true)
		{
			//System.out.println("state: " + state);
			if(ChatServer.state) {
				boolean timedOut = false;
				Arrays.fill( receiveData, (byte) 0 );
				DatagramPacket receivePacket = new DatagramPacket(receiveData, receiveData.length);
				try {
					serverSocket.setSoTimeout(1000);
				} catch (SocketException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
				try {
					serverSocket.receive(receivePacket);
				} catch(SocketTimeoutException ste) {
					timedOut = true;
					//System.out.println("timed out");
				}
				if(!timedOut) {
					String sentence = new String( receivePacket.getData());
					//System.out.println("RECEIVED: " + sentence);
					InetAddress IPAddress = receivePacket.getAddress();
					int port = receivePacket.getPort();
					String capitalizedSentence = sentence.toUpperCase();
					frm.receive(sentence);
					sendData = capitalizedSentence.getBytes();
					DatagramPacket sendPacket =
							new DatagramPacket(sendData, sendData.length, IPAddress, port);
					serverSocket.send(sendPacket);
				}
				if(turnOff) {
					ChatServer.serverSocket.close();
					turnOff = false;
					state = false;
				}
			} else {
				if(turnOn) {
					serverSocket = new DatagramSocket(9875);
					turnOn = false;
					state = true;
				}
			}
		}

	}

}


